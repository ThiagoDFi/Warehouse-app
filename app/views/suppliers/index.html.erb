<h1>Fornecedores</h1>

<% if @suppliers.any? %>

  <table>
    <thead>
      <tr>
        <th>Nome</th>
        <th>Localização</th>
      </tr>
    </thead>
    <tbody>
      <% @suppliers.each do |supplier|%>

      <tr>
        <td><%= link_to supplier.brand_name, supplier%> </td>
        <td><%=supplier.city%> - <%=supplier.state%> </td>
      </tr>
      <% end %>
    </tbody>
  </table>

<% else %>
  <p>Não existe nenhum fornecedor cadastrado</p>
<% end %> 

<div>
<%= link_to 'Cadastrar fornecedor', new_supplier_path %>
<%= link_to 'Voltar', root_path %>
</div>

