<h1> Fornecedor: <%=@supplier.brand_name %></h1>

<div>
  <strong>Razão social: </strong><%= @supplier.corporate_name%> </br>
  <strong>CNPJ: </strong><%= @supplier.registration_number%> </br>
  <strong>Endereço: </strong><%= @supplier.full_address%> </br>
  <strong>Cidade: </strong><%= @supplier.city%> </br>
  <strong>Estado: </strong><%= @supplier.state%> </br>
  <strong>E-mail: </strong><%= @supplier.email%> </br>
  <strong>Telefone: </strong><%= @supplier.phone_number%> </br>
</div>

<% if @product_model.any?%>

<h2>Produtos do Fornecedor <%= @supplier.brand_name %></h2>
  <div>
      <% @product_model.each do |pm| %>
        <dl>
          <dt>Nome: </dt>
          <dd><%= pm.name %></dd>
          <dt>SKU: </dt>
          <dd><%= pm.sku %></dd>
          <dt>Dimensão: </dt>
          <dd><%= pm.height%>cm x <%= pm.width%>cm x <%= pm.depth%>cm</dd>
          <dt>Peso: </dt>
          <dd><%= pm.weight%>g</dd>
        </dl>
      <% end %>
  </div>
<% else %>
  <div>
    <p>Nenhum produto deste fornecedor cadastrado
  </div>
<% end %>

  <%= link_to 'Editar', edit_supplier_path%> |
  <%= link_to 'Voltar', root_path %>
